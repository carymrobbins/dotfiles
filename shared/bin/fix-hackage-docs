#!/bin/bash

# https://hackage.haskell.org/upload

set -e

usage() {
  echo "Usage: $0 <target>"
}

#if [ $# -ne 1 ]; then
#  >&2 usage
#  exit 1
#elif [ "$1" = '--help' ]; then
#  usage
#  exit
#fi

target=$1

dir=$(mktemp -d dist-docs.XXXXXX)
trap 'rm -r "$dir"' EXIT

set -x

# assumes cabal 2.4 or later
cabal v2-haddock --builddir="$dir" --haddock-for-hackage --enable-doc "$1"

cabal upload -d --publish $dir/$1-*-docs.tar.gz
