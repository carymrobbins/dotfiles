#!/bin/bash

ostype=$(uname)

case "$(uname)" in
  Darwin)
    pastecmd=pbpaste
    copycmd=pbcopy
    ;;
  *)
    >&2 echo "Unsupported os type: $ostype"
    exit 1
esac

pyfind=î˜¼
#pyrepl=â‹™
pyrepl=ğŸ

hsfind=î™·
hsrepl=â‹™
#hsrepl=Î»
#hsrepl=Î»â¥«
#hsrepl=â‹‹â¥«
#hsrepl=â‰«â¥«

pgfind=î™®
#pgrepl=â‹™
pgrepl=ğŸ˜

exec $pastecmd \
  | sed "s/$pyfind/$pyrepl/g" \
  | sed "s/$hsfind/$hsrepl/g" \
  | sed "s/$pgfind/$hsrepl/g" \
  | $copycmd
