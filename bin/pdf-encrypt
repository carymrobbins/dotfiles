#!/bin/bash

for arg in "$@"; do
  case "$arg" in
    -h|--help) showHelp=1;;
  esac
done

if [ $# -ne 2 ] || [ -n "$showHelp" ]; then
  cat <<HERE
Usage: $0 <file> <password>

The output file will be file.pdf-encrypted.pdf
HERE
  exit 1
fi

targetFile=$1-encrypted.pdf

#if [ -f "$targetFile" ]; then
#  >&2 echo "$targetFile already exists!"
#  exit 1
#fi

args=(
  -q
  -dNOPAUSE
  -dBATCH
  -sDEVICE=pdfwrite
  -sOutputFile="$targetFile"
  -sUserPassword="$2"
  -sOwnerPassword="$2"
  -c
  .setpdfwrite
  -f "$1"
)

set -x
gs "${args[@]}"
