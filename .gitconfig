[user]
	useConfigOnly = true
[push]
	default = current
[pull]
	default = current
[merge]
	tool = kdiff3
[alias]
	co = checkout
	br = branch
	a = add
	ap = add -p
	ci = commit
	fu = commit --fixup
	sq = commit --squash
	s = show
	st = status
	d = diff
	dc = diff --cached
	l = log
	l1 = log --oneline
	ll = log --graph --decorate
	ll1 = log --graph --decorate --oneline
	f = fetch
	unstage = reset HEAD --
	autosquash = rebase -i --autosquash
	as = rebase -i --autosquash
	p = push
	pf = push --force-with-lease
        rh = rebase-helper
        rho = rebase-helper origin/master
[core]
	commentchar = "#"
	excludesfile = ~/.gitignore
	pager = less -F -X
